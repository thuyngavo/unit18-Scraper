{{!-- navbar --}}
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class ="navbar-brand" href="/">Mongo Scraper</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="/">Home</a></li>
            <li><a href="/saved">Saved Articles</a></li>
            <li><button type="button" class="btn btn-danger scrape-new" id="scrape">Scrape New Articles!</button></li>
        </ul>
    </div>
</nav>

{{!-- jumbotron --}}
<div class="jumbotron text-center">
    <div class="caption">
        <h1 class="display-4">MONGO SCRAPER </h1>
        <p class="lead">New York Times Edition</p>
        <hr class="my-4">
        {{!-- scrape button --}}
        <button type="button" class="btn btn-danger scrape-new">Lets Get Scraping!</button>
    </div>
</div>


{{!-- container to hold articles --}}
{{#each articles}}
<div class="story-body" id={{this._id}}>
<h2>
<a href="{{this.link}}" target="_blank">{{this.title}}</a>
<form action="/save/{{this._id}}" method="POST">
<button type="submit" class="status" value="{{this.status}}">{{this.status}}</button>
{{#unless this.note}}
<button type="button" class="addnote-button" value="{{this._id}}">Add A Note</button>
{{/unless}}
{{#if this.note}}
<button type="button" class="addnote-button" value="{{this._id}}">Edit Note</button>
{{/if}}
</form>
</h2>
<summary>{{this.summary}}</summary>
</div>
{{/each}}

